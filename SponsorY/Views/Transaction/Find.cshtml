@model FindChanelViewModel

@{
	ViewData["Title"] = "Select category";
}

<table class="table table-bordered table-hover" style="width:100%">
	<thead class="text-muted">
		<tr>
			<th>
				Chanel Url
			</th>
			<th>
				Chanel Name
			</th>
			<th>
				Subscribers
			</th>
			<th>
				Price per clip
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody class="text-muted">
		@foreach (var ch in Model.Youtubers)
		{
			<tr class="table-active text-muted text-center">
				<td>
					<a class="text-muted text-center" href="@ch.Url" target="_blank">Visit the chanel</a>
				</td>
				<td>
					<center>@ch.ChanelName </center>
				</td>
				<td>
					<center>@ch.Subscribers</center>
				</td>
				<td>
					<center>@ch.PricePerClip</center>
				</td>
				<td>
					@*<div class="w-75 btn-group" role="group">
						<a class="btn btn-primary text-muted" asp-controller="Youtuber" asp-action="Edit" asp-route-EditId=@ch.Id><i class="bi bi-pencil-square"></i> Edit</a>
					</div>
					<div class="w-75 btn-group" role="group">
						<a class="btn btn-primary text-muted" asp-controller="Youtuber" asp-action="Delete" asp-route-DelteId=@ch.Id><i class="bi bi-x-circle"></i> Delete</a>
					</div>*@

				</td>
			</tr>
		}
	</tbody>
</table>





