@using SponsorY.DataAccess.ModelsAccess;
@model IEnumerable<YouTubeViewModel>

@{
	ViewData["Title"] = "Yotubers";
}
<partial name="_TempData" />
<h1>YouTube chanels:</h1>

<div class="container p-3">
	<div class="row pt-4">
		<div class="wrapper">
			<div data-inline="true">
				<a asp-controller="Youtuber" asp-action="Add" class="btn btn-info">
					 <i class="bi bi-plus-circle"></i> Add Youtube chanel</a>
			</div>
			<div data-inline="true">
				<a asp-area="Category" asp-controller="Category" asp-action="Add" class="btn btn-warning"><i class="bi bi-plus-circle"></i>Add category</a>
			</div>
		</div>
	</div>
</div>



<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th scope="col">
				Chanel
			</th>
			<th scope="col">
				Chanel Name
			</th>
			<th scope="col">
				Subscribers
			</th>
			<th scope="col">
				Category
			</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody >
		@foreach (var ch in Model)
		{
			<tr class="table-info text-muted text-center">
				<td>
					<a class="text-muted text-center" href="@ch.Url" target="_blank" width="200" height="200">Visit the chanel</a>
				</td>
				<td>
					<center>@ch.ChanelName </center>
				</td>
				<td >
					<center>@ch.Subscribers</center>
				</td>
				<td >
					<center>@ch.Category</center>
				</td>
				<td >
					<div class="w-75 btn-group" role="group">
						<a class="btn btn-info" asp-area="Youtube" asp-controller="Youtuber" asp-action="Edit" asp-route-EditId=@ch.Id><i class="bi bi-pencil-square"></i> Edit</a>
					</div>
					<div class="w-75 btn-group" role="group">
						<a class="btn btn-danger" asp-area="Youtube" asp-controller="Youtuber" asp-action="Delete" asp-route-DelteId=@ch.Id><i class="bi bi-x-circle"></i> Delete</a>
					</div>

				</td>
			</tr>
		}
	</tbody>
</table>