@using SponsorY.DataAccess.ModelsAccess;
@model AddYoutViewModel

@{
    ViewData["Title"] = "Add new chanel";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <h2 class="text-muted">Add Chanel</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ChanelName">ChanelName</label>
                <input class="form-control " autocomplete="ChanelName" aria-required="true" asp-for="@Model.ChanelName" />
                <span asp-validation-for="@Model.ChanelName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Url">Chanel Url</label>
                <input class="form-control " autocomplete="Url" aria-required="true" asp-for="@Model.Url" />
                <span asp-validation-for="@Model.Url" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Subscribers">Subscribers</label>
                <input class="form-control" type="number" autocomplete="Subscribers" aria-required="true" asp-for="@Model.Subscribers" />
                <span asp-validation-for="@Model.Subscribers" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.PricePerClip">Add price per clip</label>
                <input class="form-control" type="number" autocomplete="PricePerClip" aria-required="true" asp-for="@Model.PricePerClip" />
                <span asp-validation-for="@Model.PricePerClip" class="text-danger"></span>
            </div>
             <div class="list-group mb-3 text-center">
                <label asp-for="@Model.CategoryId" class="form-label">Category</label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option class="list-group" value="@category.Id">@category.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                <a asp-area="Youtube" asp-controller="Youtuber" asp-action="Main" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>