@using SponsorY.DataAccess.ModelsAccess.Settings;
@model ChangePassViewModel
@{
	ViewData["Title"] = "Change password";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
	<div class="col-md-4 offset-md-4">
		<form id="changePassword" method="post">
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			@if (!Model.IsPassCorrect)
			{
				<div class="text-center mb-3">
					<label asp-for="@Model.Password">Enter your password</label>
					<input class="form-control " autocomplete="password" aria-required="true" asp-for="@Model.Password" />
					<span asp-validation-for="@Model.Password" class="text-danger"></span>
				</div>
			}
			else
			{
				<div class="text-center mb-3">
					<label asp-for="@Model.NewPassword">New Password</label>
					<input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.NewPassword" />
					<span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
				</div>
				<div class="text-center mb-3">
					<label asp-for="@Model.ConfirmPassword">Confirm Password</label>
					<input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
					<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
				</div>
			}
			<div class="text-center">
				<button id="registerSubmit" type="submit" class="btn btn-primary">Submit</button>
			</div>

		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

