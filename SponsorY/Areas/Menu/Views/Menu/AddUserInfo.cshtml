@using SponsorY.DataAccess.ModelsAccess.User;

@model UserInfoViewModel

@{
	ViewData["Title"] = "User Info";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
	<div class="col-md-4 offset-md-4">
		<form id="registerForm" method="post">
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="text-center mb-3">
				<label asp-for="@Model.FirstName">FirstName</label>
				<input class="form-control " autocomplete="FirstName" aria-required="false" asp-for="@Model.FirstName" />
				<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
			</div>
			<div class="text-center mb-3">
				<label asp-for="@Model.LastName">Last Name</label>
				<input class="form-control " autocomplete="LastName" aria-required="false" asp-for="@Model.LastName" />
				<span asp-validation-for="@Model.LastName" class="text-danger"></span>
			</div>
			<div class="text-center mb-3">
				<label asp-for="@Model.Age">Age</label>
				<input class="form-control" type="number" autocomplete="Age" aria-required="false" asp-for="@Model.Age" />
				<span asp-validation-for="@Model.Age" class="text-danger"></span>
			</div>
			<div class="text-center mb-3">
				<label asp-for="@Model.Country">Country</label>
				<input class="form-control" type="text" autocomplete="new-password" aria-required="false" asp-for="@Model.Country" />
				<span asp-validation-for="@Model.Country" class="text-danger"></span>
			</div>
			<div class="text-center">
				<button id="registerSubmit" type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
